---
import Layout from "../layouts/Layout.astro";
import HeroReact from "../REACT/components/Hero-react.jsx";
import AboutMeReact from "../REACT/components/AboutMe-react.jsx";
import { ProjectsList } from "../REACT/components/Projects/ProjectsList";
import { getI18n } from "../utils/i18n";

const locale = Astro.locals.locale ?? "es";


const { messages } = await getI18n(locale);
---

<Layout class=" bg-color-background-react w-full">
    <HeroReact client:visible   initialLocale={locale}
    initialMessages={messages}/>
    <AboutMeReact client:visible initialLocale={locale}
    initialMessages={messages}/>
    <ProjectsList client:visible initialLocale={locale}
    initialMessages={messages}/>
</Layout>