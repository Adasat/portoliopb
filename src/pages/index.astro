---
import "../styles/global.css";

import Layout from "../layouts/Layout.astro";
import BigDevices from "../layouts/BigDevices.vue";
import MobileSnap from "../layouts/MobileSnap.vue";
import { getI18n } from "../utils/i18n";

const locale = Astro.locals.locale ?? "es";

console.log(locale, "aqui");

const { messages } = await getI18n(locale);
---

<Layout>
  <!-- Mostrar solo en pantallas grandes -->
  <BigDevices
    client:only="vue"
    initialLocale={locale}
    initialMessages={messages}
  />

  <!-- Mostrar solo en mÃ³viles -->
  <MobileSnap
    class="sm:hidden"
    client:only="vue"
    initialLocale={locale}
    initialMessages={messages}
  />
</Layout>
